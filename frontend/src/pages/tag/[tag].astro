---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { type CollectionEntry, getCollection } from 'astro:content';

type Props = {
  posts: (CollectionEntry<'project'> | CollectionEntry<'experience'> | CollectionEntry<'publication'>)[]
};
export async function getStaticPaths() {
  const projects = await getCollection('project');
  const experiences = await getCollection('experience');
  const publications = await getCollection('publication');
  const posts = [...projects,...experiences,...publications];
  const tags = [...new Set(posts.map((post) => post.data.tags).flat())];
  return tags.map((tag) => {
    let filteredPosts = posts.filter((post) => post.data.tags.includes(tag));
    return { 
      params: { tag },
      props: { posts: filteredPosts }
    };
  });
}

const { posts } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 720px;
        max-width: 100% - 2rem;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 1rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
        background-color: rgba(153,156,189,0.3);
        border-radius: 1rem;
				width: calc(50% - 4.5rem);
        padding: 2rem;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: #2336ff;
				line-height: 1;
			}
      .dark .title {
        color: #8bc2dd;
      }
			.date {
				margin: 0;
				color: #2336ff;
			}
      .dark .date {
        color: #8bc2dd;
      }
			ul li a:hover h4,
			ul li a:hover .date {
				color: #ff5733;
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: #5a8ba1;
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 1rem;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/${post.slug.split('-')[0]}/${post.slug}/`}>
									<h4 class="title">{post.data.title}</h4>
                  <h5 class="description">{post.data.description}</h5>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
