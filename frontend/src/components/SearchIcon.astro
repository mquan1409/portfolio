<style>
  #search-btn {
    display: none;
  }
  #search-btn.show {
    display: flex;
    justify-content: center;
    align-items: center;
    border: 0;
    background: none;
    color: rgb(16,18,25);
  }
  :global(.dark) #search-btn {
    color: rgb(255,255,255);
  }
</style>
<script>
  document.querySelector("#search-btn")?.addEventListener('click', () => {
    let searchBtn = document.querySelector("#search-btn");
    searchBtn?.classList.toggle('show');
    let paddingBar = document.querySelector('#util-padding');
    paddingBar?.classList.toggle('show');
    let utilBar = document.querySelector('#util-bar');
    utilBar?.classList.toggle('expanded-horizontal');
    let searchBar = document.querySelector("#search-bar");
    searchBar?.classList.toggle('show');
    let inputBar = searchBar?.querySelector("#key");
    (inputBar as HTMLElement)?.focus();
  });
</script>
