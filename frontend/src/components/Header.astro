---
import ThemeIcon from './ThemeIcon.astro';
import Menu from './Menu.astro';
import HeaderLink from './HeaderLink.astro';
---

<header id="header">
	<nav class="nav-links">
    <Menu />
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/experience">Experience</HeaderLink>
      <HeaderLink href="/project">Project</HeaderLink>
      <HeaderLink href="/publication">Publication</HeaderLink>
      <a href="/QuanPham_Resume.pdf" download="QuanPham_Resume.pdf">Resume</a>
    </div>
    <ThemeIcon />
	</nav>
	<nav class="nav-links">
    <div class="scroll-internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/experience">Experience</HeaderLink>
      <HeaderLink href="/project">Project</HeaderLink>
      <HeaderLink href="/publication">Publication</HeaderLink>
      <a href="/QuanPham_Resume.pdf" download="QuanPham_Resume.pdf">Resume</a>
    </div>
  </nav>
</header>
<style>
	header {
		margin: 0;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
    width: 720px;
    max-width: calc(100% - 2em);
    margin: auto;
    position: relative;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
  nav #themeToggle {
    margin-left: auto;
  }
  nav .menu {
    display: none;
  }
	nav a {
		padding: 1rem 0.5rem;
		color: rgb(15, 18, 25);
    text-align: center;
		border-bottom: 4px solid transparent;
	}
  nav a:hover {
    border-bottom-color: #8a9dff;
  }
  :global(.dark) nav a {
    color: #fff;
  }
	nav a.active {
		text-decoration: none;
		border-bottom-color: #2337ff;
	}
  .internal-links a {
    display: inline-block;
  }
	:global(.dark) nav a.active {
		border-bottom-color: #fff;
	}
  .scroll-internal-links{
    width: 100%;
    display: none;
  }
  .scroll-internal-links a {
    display: none;
  }
  .scroll-internal-links.show {
    display: none;
  }
  .scroll-internal-links.show a {
    display: none;
  }
	@media (max-width: 720px) {
    .internal-links {
      display: none;
    }
    nav .menu {
      display: inline-block;
    }
    .scroll-internal-links.show {
      display: block;
    }
    .scroll-internal-links.show a {
      display: block;
    }
	}
</style>
<script>
  let menu = document.querySelector('.menu');
  if (menu !== null){
    menu.addEventListener('click', () => {
      let menuLinks = document.querySelector('.scroll-internal-links');
      if (menuLinks !== null){
        menuLinks.classList.toggle('show');
      }
    });
  };
</script>
