---
import ThemeIcon from './ThemeIcon.astro';
import SearchIcon from './SearchIcon.astro';
import SearchBar from './SearchBar.astro'
---
<div id="util-bar">
  <div id="util-padding" class="show">
  </div>
  <div id="util-content">
    <SearchBar />
    <SearchIcon />
    <ThemeIcon />
  </div>
</div>
<style>
  #util-bar {
    max-width: calc(100% - 5rem);
    width: 1.5rem;
    position: absolute;
    display: none;
    top: 0;
    right: calc((100% - 720px)/2 + 3rem);
    height: 3.5rem;
    z-index: 2;
  }
  #util-bar.expanded-horizontal {
    width: calc(720px - 3rem);
  }
  #util-bar.show {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #util-bar #util-padding {
    display: none;
  }
  #util-bar #util-padding.show {
    display: block;
    height: 100%;
    width: 12rem;
    background: linear-gradient(to left,rgba(255,255,255,1),rgba(255,255,255,0.1)) no-repeat;
  }
  :global(.dark) #util-bar #util-padding {
    background: linear-gradient(to left,rgba(68,68,68,1),rgba(68,68,68,0.1)) no-repeat;
  }
  #util-bar #util-content {
    display: flex;
    justify-content: right;
    align-items: center;
    gap: 0.5rem;
    height: 100%;
    background-color: white;
    width: 100%;
  }
  :global(.dark) #util-bar #util-content {
    background-color: rgb(68,68,68);
  }
  #util-bar #util-content #themeToggle {
    right: 0;
  }
  @media (max-width: 720px) {
    #util-padding {
      width: 0;
    }
    #util-bar {
      right: 4rem;
    }
  }
</style>
